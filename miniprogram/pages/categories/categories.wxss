/* pages/categories/categories.wxss */
/* 引入组件样式 */
@import '../../template/label/label.wxss';
/* 搜索栏样式开始 */
.search{
    width: 750rpx;
    height: 90rpx;
    position: fixed;
    background-color: #000;
    display: flex;
    justify-content:start;
    align-items: center;
  }
  .input{
    width: 650rpx;
    height: 60rpx;
    margin:0 auto; 
    position: relative;
  }
  .input>image{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top:15rpx;
    left: 50rpx;
    transform: translateX(-25rpx);
  }
  .search>.input>input{
    width: 580rpx;
    height: 40rpx;
    background-color: #eee;
    /* border: 1rpx solid #f00; */
    border-radius: 10rpx;
    padding:10rpx 0;
    padding-left:80rpx;
    /* 首行缩进 */
    
    letter-spacing: 2rpx;
  }
  /* 搜索栏样式结束 */

  /* 左侧导航栏开始 */
  .left_bar{
      width: 748rpx;
      height: auto;
      margin-top: 90rpx;
      position: fixed;
      /* border: 1rpx solid red; */
  }
  .left_list{
      width: 200rpx;
      height: 1200rpx;
      /* border: 1rpx solid #000; */
      background-color: #eee;
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      align-items: center;
  }
  .left_list>view{
      width: 100%;
      height: 60rpx;
      padding:15rpx 0;
      text-align: center;
      font-size: 30rpx;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
  }
  .left_list>view:last-child{
    flex: 1;
  }
  /* 标签激活态 */
  .selected{
    background-color: #fff;
    border-left: 3rpx solid red;
  }
  

  /* 左侧导航栏结束 */