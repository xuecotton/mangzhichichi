.comment{
  width: 745rpx;
  height:300rpx;
  border:1rpx solid #aea;
}
.top_comment{
  width: 745rpx;
  height:130rpx;
  border: 1rpx solid #000;
  display: flex;
  flex-flow: row;
  justify-content: space-evenly;
  align-items: center;
}
.sancan , .jingpin{
  width: 300rpx;
  height: 120rpx;
  border: 1rpx solid #faf;
  display: flex;
  flex-flow: row;
  justify-content: space-evenly;

}
.comment_title , .comment_img{
  height: 100%;
  border:1rpx solid #afa;
}
.comment_title{
  width: 55%;
  display: flex;
  flex-flow: column;
  justify-content: space-evenly;
  align-items: flex-start;
}
.comment_title>text:nth-child(1){
  font-size:28rpx;
  color: #000;
  font-weight: 700;
}
.comment_title>text:nth-child(2){
  font-size: 20rpx;
  color:#aaa;
}
.comment_img{
  width: 35%;
}
.comment_img>image{
  width: 100%;
  height: 100%;
}

.hot_comment{
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-evenly;
  align-items: center;
}
.hot_title{
  width: 90%;
  height: 32rpx;
  margin: 0 auto;
  border: 1rpx solid #000;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.hot_title>text:nth-child(1){
  font-size: 30rpx;
  font-weight: 700;
  color: #000;
}
.hot_title>text:nth-child(2){
  font-size: 20rpx;
  color: #aaa;
}
.hot_cell{
  width: 90%;
  height: 140rpx;
  margin-top: 10rpx;
  border: 1rpx solid #000;
  display: flex;
  flex-flow: row;
  justify-content: space-evenly;
  align-items: center;
}
.hot_cell>view{
  width: 138rpx;
  height: 138rpx;
  border: 1rpx solid red;
  border-radius: 25rpx;
  position: relative;
}
.hot_cell>view>text{
  color: #eee;
  font-size:28rpx ;
  position: absolute;
  bottom: 5rpx;
  left: 50%;
  transform: translateX(-28rpx);
}