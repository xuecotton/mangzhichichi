/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  width: 100%;
}
/* 搜索栏样式开始 */
.search{
  width: 750rpx;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  justify-content:start;
  align-items: center;
}
.classify{
  width: 60rpx;
  height: 60rpx;
  margin : 0 25rpx;
  
}
.classify > image {
  width: 60rpx;
  height: 60rpx;
  margin :0 auto;
}
.input{
  width: 550rpx;
  height: 60rpx;
  position: relative;
}
.input>image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:15rpx;
  left: 50rpx;
  transform: translateX(-25rpx);
}
.search>.input>input{
  width: 550rpx;
  height: 40rpx;
  background-color: #eee;
  /* border: 1rpx solid #f00; */
  border-radius: 30rpx;
  padding:10rpx 25rpx;
  /* 首行缩进 */
  text-indent:50rpx;
  letter-spacing: 2rpx;
}
/* 搜索栏样式结束 */
/* 轮播图样式开始 */
.swiper_box{
  width: 100%;
  /* height: 480rpx; */
  /* margin:0 15rpx; */
  /* height: 400rpx; */
  /* margin:0 auto; */
  /* border: 1rpx solid #aea; */
}
.swipers{
  /* width: 100%; */
  /* height:1100rpx; */
}

.swipers>swiper-item>image{
  /* margin:0 auto; */
  /* display:block; */
  width: 100%;
  /* height: 480rpx; */
  display: block;
}
/* 轮播图样式结束 */

/* 推荐标签开始 */
.comment{
  width: 745rpx;
  height:200rpx;
  /* border:1rpx solid #aea; */
  background-color: #fff;
}
.top_comment{
  width: 745rpx;
  height:130rpx;
  margin-top: 25rpx;
  /* border: 1rpx solid #000; */
  display: flex;
  flex-flow: row;
  justify-content: space-evenly;
  align-items: center;
}
.sancan , .jingpin{
  width: 300rpx;
  height: 120rpx;
  /* border: 1rpx solid #faf; */
  display: flex;
  flex-flow: row;
  justify-content: space-evenly;

}
.comment_title , .comment_img{
  height: 100%;
  /* border:1rpx solid #afa; */
}
.comment_title{
  width: 65%;
  display: flex;
  flex-flow: column;
  justify-content: space-evenly;
  align-items: flex-start;
}
.comment_title>text:nth-child(1){
  font-size:36rpx;
  color: #000;
  font-weight: 700;
}
.comment_title>text:nth-child(2){
  font-size: 28rpx;
  color:#aaa;
}
.comment_img{
  width: 35%;
}
.comment_img>image{
  width: 100%;
  height: 100%;
}

.hot_comment{
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-evenly;
  align-items: center;
}
.hot_title{
  width: 90%;
  height: 36rpx;
  margin: 10rpx auto;
  /* border: 1rpx solid #000; */
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.hot_title>text:nth-child(1){
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
}
.hot_title>text:nth-child(2){
  font-size: 28rpx;
  color: #aaa;
}
.hot_cell{
  width: 90%;
  height: 140rpx;
  margin-top: 10rpx;
  /* border: 1rpx solid #000; */
  display: flex;
  flex-flow: row;
  justify-content: space-evenly;
  align-items: center;
}
.hot_cell>view{
  width: 138rpx;
  height: 138rpx;
  /* border: 1rpx solid red; */
  border-radius: 25rpx;
  position: relative;
}
.hot_cell>view>image{
  width: 138rpx;
  height: 138rpx;
  border-radius: 25rpx;

}
.hot_cell>view>text{
  color: #eee;
  font-size:28rpx ;
  position: absolute;
  bottom: 5rpx;
  left: 50%;
  transform: translateX(-28rpx);
}

/* 推荐标签结束 */

/* 列表项开始 */
.main{
  margin-top: 20rpx;
  width: 745rpx;
  height: auto;
  /* border: 1rpx solid red; */
  background-color: #fff;
}
.main_title{
  width: 90%;
  height: 50rpx;
  margin :0 auto;
  /* border: 1rpx solid #000; */
  text-align: center;
  font-weight: 700;
}
.main_title>text{
  font-size: 36rpx;
  padding-top:15rpx;
}
.main_title>text::before{
  content:'-'
}
.main_title>text::after{
  content:'-'
}
.main_list{
  width: 90%;
  margin:0 auto;
  /* border: 1rpx solid red; */
}
.main_item{
  width: 100%;
  height: 500rpx;
  /* border:1rpx solid #000; */
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding:25rpx 0;
  border-bottom: 1rpx;
}
.item_pic{
  width: 100%;
  height: 400rpx;
  /* border: 1rpx solid #aea; */
}
.item_pic>image{
  width: 100%;
  height: 100%;
}
.item_title{
  width: 100%;
  height: 46rpx;
  padding:5rpx;
  margin-top: 25rpx;
  
  /* border: 1rpx solid red; */
}
.item_title>text{
  width: 100%;
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  letter-spacing: 1.5rpx;
  
}
.item_desc{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding:10rpx 0;
}
.item_desc>text{
  font-size: 28rpx;
  color:#999;
  margin:10rpx 25rpx;

}

/* 列表项结束 */