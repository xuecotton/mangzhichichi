@import '../../template/list/list.wxss';
page{
    background-color: white;
}
.container{
    width: 100%;
    height: 100%;
}
/* 上方选项卡开始 */
.top_bar{
    background-color: #eee;
    width: 748rpx;
    height: 80rpx;
    /* border: 1rpx solid #000; */
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}
.top_bar>view{
    padding:14rpx 0;
    font-size: 36rpx;
}
/* 选中态 */
.selected{
    color:red;
    border-bottom: 4rpx solid red;
}
.disabled{
    color:#000;
    border-bottom: 0rpx;
}
/* 上方选项卡结束 */

