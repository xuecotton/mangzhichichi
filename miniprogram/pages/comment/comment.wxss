/* pages/collect/collect.wxss */
@import '../../template/list/list.wxss';
page{
    background-color: white;
}
.container{
    width: 100%;
    height: 100%;
}
/* 上方选项卡开始 */
.top_bar{
    background-color: #eee;
    width: 748rpx;
    height: 80rpx;
    /* border: 1rpx solid #000; */
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}
.top_bar>view{
    padding:14rpx 0;
    font-size: 36rpx;
}
/* 选中态 */
.selected{
    color:red;
    border-bottom: 4rpx solid red;
}
.disabled{
    color:#000;
    border-bottom: 0rpx;
}
/* 上方选项卡结束 */
/* 列表样式开始 */
.list{
    box-sizing: border-box;
    background-color: #fff;
    width: 748rpx;
    height: auto;
    margin-top:0rpx;
    /* border: 1rpx solid #000; */
    padding:20rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: flex-start;
  }
  .item{
    width: 700rpx;
    height:240rpx;
    /* border:1rpx solid #eae; */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding:15rpx;
    margin:10rpx 0;
    background-color: #eee;
  }
  .item>image{
    height: 240rpx;
    width: 300rpx;
    /* border: 1rpx solid #afa; */
  }
  .desc{
    width: 380rpx;
    height: 240rpx;
    margin: 10rpx 0;
    /* border: 1rpx solid #faf; */
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: flex-start;
  }
  .desc>text:nth-child(1){
    height: 40rpx;
    font-size: 32rpx;
    font-weight: 700;
  }
  .desc>text:nth-child(2){
    height: 70rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 28rpx;
    font-weight: 600;
  }
  .desc>text:nth-child(3){
    font-size: 24rpx;
    color: #999;
    
  }
  
  /* 列表样式结束 */
